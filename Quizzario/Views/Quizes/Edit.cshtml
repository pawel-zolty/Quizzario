@model CreateQuizViewModel


@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}

@section AdditionalStylesheets
    {
    <link rel="stylesheet" href="~/css/template.css">
    <link rel="stylesheet" href="~/css/create-quiz.css">
}

@section AdditionalScripts
    {
    <script src="~/js/custom.js"></script>
}

@using (Html.BeginForm("Edit", "Quizes", FormMethod.Post, new { id = "QuizEditForm", onsubmit = "event.preventDefault();" }))
{
    <div class="row px-3 py-3 mx-0">
        <div class="col-12">
            <div class="row">
                <div class="col-md-4">
                    <h1>Edit @Model.Title</h1>
                    <div class="row">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.QuizAccessLevel)
                            @Html.DropDownListFor(model => model.QuizAccessLevel, new SelectList(new string[] { "Public", "Private" }, Model.QuizAccessLevel))
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.QuizType)
                            @Html.DropDownListFor(model => model.QuizType, new SelectList(new string[] { "Quiz", "Exam", "Test" }, Model.QuizType))
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="float-md-right">
                        @* TODO Import
                            <button class="btn btn-outline-primary my-1 mr-md-2">
                                <i class="fas fa-fw fa-upload"></i>
                                <span class="ml-1">Import</span>
                            </button>*@
                        <button class="btn btn-success my-1" id="update-quiz" type="button" onclick="editQuiz()">
                            <i class="fas fa-fw fa-plus"></i>
                            <span class="ml-1">Update</span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Title, new { @class = "form-control form-control-lg", @id = "-quiz-title", @placeholder = Model.Title })
                    </div>
                    <div class="form-group">
                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @id = "-quiz-description", @rows = 5, @placeholder = Model.Description })
                    </div>
                    <div class="form-group">
                        @Html.TextAreaFor(model => model.Path, new { @class = "form-control", @id = "-quiz-path", @rows = 5 })
                    </div>
                    <div class="form-group">
                        @Html.TextAreaFor(model => model.id, new { @class = "form-control", @id = "-quiz-id", @rows = 5})
                    </div>
                </div>
            </div>
            @* <div class="row">
                    <div class="col-12">
                        <div id="-questions">
                            @Html.PartialAsync("QuestionsPartialView", Model).Result
                        </div>
                        <button type="button" onclick="addQuestion()" id="AddQuestionButton" class="-question-card-add-new-question btn btn-sm btn-outline-primary px-3">Add new question...</button>
                    </div>
                </div>
            *@
        </div>
    </div>
}