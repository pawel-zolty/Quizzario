@model IEnumerable<Quizzario.BusinessLogic.DTOs.QuizDTO>

@{
    ViewData["Title"] = "EditQuiz";
    Layout = "~/Views/Quiz/_AdminLayout.cshtml";
}


<div class="panel panel-default">
    <div class="panel-heading">
        <h3>All Quizes</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed  table-bordered">
            <tr>
                <th>ID </th>
                <th>Title </th>
                <th>Description</th>
                <th>QuizType</th>
            </tr>
            @foreach(var item in Model)
            {
            <tr>
                <td>@item.Id </td>
                <td>@item.Title</td>
                <!--<td@Html.ActionLink(item.Title, "Edit", new { item.Id })</td>-->
                <td>@item.Description</td>
                <td>@item.QuizType</td>
            </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Create New Quiz", "Create", null, new { @class = "btn btn-default"})

    </div>
</div>