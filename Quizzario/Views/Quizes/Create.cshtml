
@{
    ViewData["Title"] = "Create quiz";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}

@section AdditionalStylesheets
    {
    <link rel="stylesheet" href="~/css/template.css">
    <link rel="stylesheet" href="~/css/create-quiz.css">
}

@section AdditionalScripts
    {
    <script src="~/js/custom.js"></script>
}

<form>
    <div class="row px-3 py-3 mx-0">
        <div class="col-12">
            <div class="row">
                <div class="col-md-4">
                    <h1>Create quiz</h1>
                </div>
                <div class="col-md-8">
                    <div class="float-md-right">
                        <button class="btn btn-outline-primary my-1 mr-md-2">
                            <i class="fas fa-fw fa-upload"></i>
                            <span class="ml-1">Import</span>
                        </button>
                        <button class="btn btn-success my-1">
                            <i class="fas fa-fw fa-plus"></i>
                            <span class="ml-1">Create</span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <input class="form-control form-control-lg" type="text" id="-quiz-title" placeholder="Title">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" id="-quiz-description" rows="5" placeholder="Description"></textarea>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div id="-questions"></div>
                    <button type="button" class="-question-card-add-new-question btn btn-sm btn-outline-primary px-3">Add new question...</button>
                </div>
            </div>
        </div>
    </div>
</form>