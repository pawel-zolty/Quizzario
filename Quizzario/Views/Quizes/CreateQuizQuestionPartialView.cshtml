@model IEnumerable<CreateQuestionViewModel>

@for (int i = 0; i < Model.Count(); i++)
{
    <div class="py-2 px-3 mb-2 -question-card">
        <h6 class="d-inline">
            @Html.TextBoxFor(modelItem => Model.ElementAt(i).Question, new { @placeholder = "Type question here", @class = "-question-card-title font-weight-bold", @name = "QuestionField" })
        </h6>
        <fieldset class="form-group pl-2 mb-1" id="quiz-question-@i">
            @Html.PartialAsync("CreateQuizAnswerPartialView", Model.ElementAt(i).Answers).Result
        </fieldset>
        <button type="button" class="-question-card-add-new-answer btn btn-sm btn-link px-3" name="AddAnswerButton" question-index="@i">Add new answer...</button>
    </div>
}

<script>
    $(document).ready(function () {
        $(".-question-card-add-new-answer").click(function () {
            addAnswer(this);
        })
    });

</script>